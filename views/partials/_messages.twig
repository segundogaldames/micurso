{% for msg in flash_messages %}
    {# Definimos las clases exactas aqu√≠ para que Tailwind las reconozca #}
    {% if msg.type == 'success' %}
        {% set color = 'text-green-800 border-green-300 bg-green-50' %}
    {% elseif msg.type == 'error' %}
        {% set color = 'text-red-800 border-red-300 bg-red-50' %}
    {% elseif msg.type == 'warning' %}
        {% set color = 'text-yellow-800 border-yellow-300 bg-yellow-50' %}
    {% else %}
        {% set color = 'text-blue-800 border-blue-300 bg-blue-50' %}
    {% endif %}

    <div class="flex p-4 mb-4 border rounded-lg {{ color }}" role="alert">
        <svg class="flex-shrink-0 w-4 h-4 mt-0.5 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
        </svg>
        <div class="text-sm font-medium">
            {{ msg.message }}
        </div>
    </div>
{% endfor %}