<div x-show="open" class="mb-3">
    {% if section.lessons is not empty %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-1">Id</th>
                    <th class="col-7">Nombre</th>
                    <th class="col-3">Plataforma</th>
                    <th class="col-1">Actividades</th>
                </tr>
            </thead>
            <tbody>
                {% for model in section.lessons %}
                <tr>
                    <td> {{model.id}} </td>
                    <td> {{model.name}} </td>
                    <td> {{model.platform.name}} </td>
                    <td>
                        <a href="{{BASE}}lessons/show/{{model.id}}" class="btn btn-success btn-sm"><i
                                class="bi bi-eye"></i></a>
                        <a href="{{BASE}}lessons/edit/{{model.id}}" class="btn btn-warning btn-sm"><i
                                class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-info mt-2 fs-4">No hay lecciones disponibles</p>
    {% endif %}
