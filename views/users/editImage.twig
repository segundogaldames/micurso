{% extends "layout/default/template.twig" %}
{% block title %} {{title}} {% endblock %}

{% block content %}

<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h1 class="fs-3">
                    {{subject}}
                </h1>

            </div>
            <div class="card-body">
                {% include "partials/_messages_admin.twig" %}
                <form action="{{BASE}}{{process}}" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="image" class="form-label">Imagen</label>
                        <input type="file" name="image" class="form-control" id="image" aria-describedby="image"
                            placeholder="Imagen del usuario" />
                        <div id="image" class="form-text text-danger">
                            Ingrese la imagen del usuario
                        </div>
                    </div>
                    <div>
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="send" value="{{send}}">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a href="{{BASE}}users" class="btn btn-primary">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>
{% endblock %}