<form action="{{BASE}}{{process}}" method="post" enctype="multipart/form-data">
    <!--begin::Body-->
    <div class="card-body">
        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" name="name" value="{{user.name|default("")}}" class="form-control" id="name"
                aria-describedby="name" placeholder="Nombre del usuario" />
            <div id="name" class="form-text text-danger">
                Ingrese el nombre del usuario
            </div>
        </div>
        {% if action == 'create' %}
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" value="{{user.email|default("")}}" class="form-control" id="email"
                aria-describedby="email" placeholder="Email del usuario" />
            <div id="email" class="form-text text-danger">
                Ingrese el email del usuario
            </div>
        </div>
        {% endif %}

        <div class="mb-3">
            <label for="role" class="form-label">Rol</label>
            <select name="role" class="form-control" id="role">
                {% if action == 'edit' %}
                <option value="{{user.role_id}}"> {{user.role.name}} </option>
                {% endif %}

                <option value="">Seleccione rol</option>
                {% for role in roles %}
                <option value="{{role.id}}"> {{role.name}} </option>
                {% endfor %}

            </select>
            <div id="role" class="form-text text-danger">
                Seleccione el rol del usuario
            </div>
        </div>
        {% if action == 'edit' %}
        <div class="mb-3">
            <label for="active" class="form-label">Estado</label>
            <select name="active" class="form-control" id="active">
                {% if user.active == 1 %}
                <option value="1"> Activo </option>
                <option value="2"> Desactivar </option>
                {% else %}
                <option value="2"> Inactivo </option>
                <option value="1"> Activar </option>
                {% endif %}
            </select>
            <div id="role" class="form-text text-danger">
                Seleccione el estado del usuario
            </div>
        </div>
        {% endif %}
        {% if action == 'create' %}
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="password" aria-describedby="password"
                placeholder="Password del usuario" />
            <div id="password" class="form-text text-danger">
                Ingrese el password del usuario
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Confirmar Password</label>
            <input type="password" name="confirm" class="form-control" id="password" aria-describedby="password"
                placeholder="Confirmar Password del usuario" />
            <div id="email" class="form-text text-danger">
                Ingrese nuevamente el password del usuario
            </div>
        </div>


        <div class="mb-3">
            <label for="image" class="form-label">Imagen (opcional)</label>
            <input type="file" name="image" class="form-control" id="image" aria-describedby="image"
                placeholder="Imagen del usuario" />
            <div id="image" class="form-text text-danger">
                Ingrese la imagen del usuario
            </div>
        </div>
        {% endif %}

    </div>
    <!--end::Body-->
    <!--begin::Footer-->
    <div class="card-footer">
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" name="send" value="{{send}}">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="{{BASE}}users" class="btn btn-primary">Volver</a>
    </div>
    <!--end::Footer-->
</form>