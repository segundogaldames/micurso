<div x-show="openItems[1]">
    {% if course.audiences is not empty %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-2">Id</th>
                <th class="col-4">Audiencia</th>
                <th class="col-2">Actividades</th>
            </tr>
        </thead>
        <tbody>
            {% for model in course.audiences %}
            <tr>
                <td> {{model.id}} </td>
                <td> {{model.name}} </td>
                <td>
                    <a href="{{BASE}}audiences/show/{{model.id}}" class="btn btn-success btn-sm"><i
                            class="bi bi-eye"></i></a>
                    <a href="{{BASE}}audiences/edit/{{model.id}}" class="btn btn-warning btn-sm"><i
                            class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p class="text-info">No hay audiencias disponibles</p>
    {% endif %}
    <a href="{{BASE}}audiencies/create/{{course.id}}" class="btn btn-outline-secondary">Agregar Audiencia</a>
</div>