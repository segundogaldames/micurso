<div x-show="openItems[2]">
    {% if course.goals is not empty %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-2">Id</th>
                <th class="col-4">Meta</th>
                <th class="col-2">Actividades</th>
            </tr>
        </thead>
        <tbody>
            {% for model in course.goals %}
            <tr>
                <td> {{model.id}} </td>
                <td> {{model.name}} </td>
                <td>
                    <a href="{{BASE}}goals/show/{{model.id}}" class="btn btn-success btn-sm"><i
                            class="bi bi-eye"></i></a>
                    <a href="{{BASE}}goals/edit/{{model.id}}" class="btn btn-warning btn-sm"><i
                            class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p class="text-info">No hay metas disponibles</p>
    {% endif %}
    <a href="{{BASE}}goals/create/{{course.id}}" class="btn btn-outline-secondary">Agregar Metas</a>
</div>