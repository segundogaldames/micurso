<form action="{{BASE}}{{process}}" method="post">
    <!--begin::Body-->
    <div class="card-body">
        <div class="mb-3">
            <label for="category" class="form-label">Categoría</label>
            <input type="text" name="name" value="{{category.name|default("")}}" class="form-control" id="category" aria-describedby="category" placeholder="Nombre de la categoría" />
            <div id="category" class="form-text text-danger">
                Ingrese el nombre de la categoría
            </div>
        </div>
        
    </div>
    <!--end::Body-->
    <!--begin::Footer-->
    <div class="card-footer">
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" name="send" value="{{send}}">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="{{BASE}}categories" class="btn btn-primary">Volver</a>
    </div>
    <!--end::Footer-->
</form>