<form action="{{BASE}}{{process}}" method="post">
    <!--begin::Body-->
    <div class="card-body">
        <div class="mb-3">
            <label for="role" class="form-label">Rol</label>
            <input type="text" name="name" value="{{role.name|default("")}}" class="form-control" id="role" aria-describedby="role" placeholder="Nombre del rol" />
            <div id="role" class="form-text">
                Ingrese el nombre del rol
            </div>
        </div>
        
    </div>
    <!--end::Body-->
    <!--begin::Footer-->
    <div class="card-footer">
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" name="send" value="{{send}}">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="{{BASE}}roles" class="btn btn-primary">Volver</a>
    </div>
    <!--end::Footer-->
</form>