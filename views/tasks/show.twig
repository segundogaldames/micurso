{% extends "layout/default/template.twig" %}
{% block title %} {{title}} {% endblock %}

{% block content %}

<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <div class="card mb-2">
            <div class="card-header">
                <h1 class="fs-3">
                    {{subject}}
                </h1>
                
            </div>
            <div class="card-body">
                {% include "partials/_messages_admin.twig" %}
                {% if task is not empty %}
                    <table class="table table-hover">
                        <tr>
                            <th>Id:</th>
                            <td> {{task.id}} </td>
                        </tr>
                        <tr>
                            <th>Rol:</th>
                            <td> {{task.name}} </td>
                        </tr>
                        <tr>
                            <th>Creado:</th>
                            <td> {{task.created_at|date("d-m-Y H:i:s")}} </td>
                        </tr>
                        <tr>
                            <th>Modificado:</th>
                            <td> {{task.updated_at|date("d-m-Y H:i:s")}} </td>
                        </tr>
                    </table>
                {% else %}
                    <p class="text-secondary fs-4">No hay tarea disponible</p>
                {% endif %}
                
            </div>
        </div>
        <a href="{{BASe}}tasks" class="btn btn-primary">Volver</a>
    </div>
    <!--end::Container-->
</div>

{% endblock %}
