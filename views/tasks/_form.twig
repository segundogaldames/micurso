<form action="{{BASE}}{{process}}" method="post">
    <!--begin::Body-->
    <div class="card-body">
        <div class="mb-3">
            <label for="tarea" class="form-label">Tarea</label>
            <input type="text" name="name" value="{{task.name|default("")}}" class="form-control" id="tarea" aria-describedby="tarea" placeholder="Nombre de la tarea" />
            <div id="role" class="form-text text-danger">
                Ingrese el nombre de la tarea
            </div>
        </div>
        
    </div>
    <!--end::Body-->
    <!--begin::Footer-->
    <div class="card-footer">
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" name="send" value="{{send}}">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="{{BASE}}tareas" class="btn btn-primary">Volver</a>
    </div>
    <!--end::Footer-->
</form>