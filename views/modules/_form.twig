<form action="{{BASE}}{{process}}" method="post">
    <!--begin::Body-->
    <div class="card-body">
        <div class="mb-3">
            <label for="module" class="form-label">Módulo</label>
            <input type="text" name="name" value="{{module.name|default("")}}" class="form-control" id="module" aria-describedby="module" placeholder="Nombre del módulo" />
            <div id="role" class="form-text text-danger">
                Ingrese el nombre del módulo
            </div>
        </div>
        
    </div>
    <!--end::Body-->
    <!--begin::Footer-->
    <div class="card-footer">
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" name="send" value="{{send}}">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="{{BASE}}modules" class="btn btn-primary">Volver</a>
    </div>
    <!--end::Footer-->
</form>